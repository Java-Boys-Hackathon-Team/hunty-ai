<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="hunty-hr">
        <createTable tableName="CANDIDATE_ENTITY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_CANDIDATE_ENTITY"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="SURNAME" type="VARCHAR(255)"/>
            <column name="BIRTH_DATE" type="DATE"/>
            <column name="SEX" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="hunty-hr">
        <createTable tableName="COMPANY_ENTITY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_COMPANY_ENTITY"/>
            </column>
            <column name="NAME" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="hunty-hr">
        <createTable tableName="EDUCATION_ENTITY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EDUCATION_ENTITY"/>
            </column>
            <column name="LEVEL_" type="VARCHAR(255)"/>
            <column name="PLACE" type="CLOB"/>
            <column name="RESUME_VERSION_ENTITY_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="hunty-hr">
        <createTable tableName="RESUME_EXPERIENCE_ENTITY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESUME_EXPERIENCE_ENTITY"/>
            </column>
            <column name="RESUME_VERSION_ENTITY_ID" type="UUID"/>
            <column name="COMPANY_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="hunty-hr">
        <createTable tableName="RESUME_VERSION_ENTITY">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESUME_VERSION_ENTITY"/>
            </column>
            <column name="CREATED_AT" type="DATETIME"/>
            <column name="CANDIDATE_ID" type="UUID"/>
            <column name="SOURCE_TYPE" type="VARCHAR(255)"/>
            <column name="SOURCE_URL" type="CLOB"/>
            <column name="S3_KEY" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="hunty-hr">
        <createIndex indexName="IDX_EDUCATION_ENTITY_RESUME_VERSION_ENTITY" tableName="EDUCATION_ENTITY">
            <column name="RESUME_VERSION_ENTITY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="RESUME_VERSION_ENTITY_ID" baseTableName="EDUCATION_ENTITY"
                                 constraintName="FK_EDUCATION_ENTITY_ON_RESUME_VERSION_ENTITY" referencedColumnNames="ID"
                                 referencedTableName="RESUME_VERSION_ENTITY"/>
    </changeSet>
    <changeSet id="7" author="hunty-hr">
        <createIndex indexName="IDX_RESUME_EXPERIENCE_ENTITY_COMPANY" tableName="RESUME_EXPERIENCE_ENTITY">
            <column name="COMPANY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="COMPANY_ID" baseTableName="RESUME_EXPERIENCE_ENTITY" constraintName="FK_RESUME_EXPERIENCE_ENTITY_ON_COMPANY"
                                 referencedColumnNames="ID" referencedTableName="COMPANY_ENTITY"/>
    </changeSet>
    <changeSet id="8" author="hunty-hr">
        <createIndex indexName="IDX_RESUME_EXPERIENCE_ENTITY_RESUME_VERSION_ENTITY" tableName="RESUME_EXPERIENCE_ENTITY">
            <column name="RESUME_VERSION_ENTITY_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="RESUME_VERSION_ENTITY_ID" baseTableName="RESUME_EXPERIENCE_ENTITY"
                                 constraintName="FK_RESUME_EXPERIENCE_ENTITY_ON_RESUME_VERSION_ENTITY" referencedColumnNames="ID"
                                 referencedTableName="RESUME_VERSION_ENTITY"/>
    </changeSet>
    <changeSet id="9" author="hunty-hr">
        <createIndex indexName="IDX_RESUME_VERSION_ENTITY_RESUME" tableName="RESUME_VERSION_ENTITY">
            <column name="CANDIDATE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CANDIDATE_ID" baseTableName="RESUME_VERSION_ENTITY" constraintName="FK_RESUME_VERSION_ENTITY_ON_CANDIDATE"
                                 referencedColumnNames="ID" referencedTableName="CANDIDATE_ENTITY"/>
    </changeSet>
</databaseChangeLog>