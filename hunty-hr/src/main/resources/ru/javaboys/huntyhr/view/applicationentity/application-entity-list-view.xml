<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://applicationEntityListView.title"
      focusComponent="applicationEntitiesDataGrid">
    <data>
        <collection id="applicationEntitiesDc"
                    class="ru.javaboys.huntyhr.entity.ApplicationEntity">
            <fetchPlan extends="_base"/>
            <loader id="applicationEntitiesDl" readOnly="true">
                <query>
                    <![CDATA[select e from ApplicationEntity e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="applicationEntitiesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="applicationEntitiesDataGrid.createAction"/>
            <button id="editButton" action="applicationEntitiesDataGrid.editAction"/>
            <button id="removeButton" action="applicationEntitiesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="applicationEntitiesDl"/>
        </hbox>
        <dataGrid id="applicationEntitiesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="applicationEntitiesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="status"/>
                <column property="screeningSummary"/>
                <column property="screeningMatchPercent"/>
                <column property="techScore"/>
                <column property="commScore"/>
                <column property="casesScore"/>
                <column property="totalScore"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
