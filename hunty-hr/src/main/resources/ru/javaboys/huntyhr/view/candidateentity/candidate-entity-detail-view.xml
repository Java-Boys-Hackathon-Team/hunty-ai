<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://candidateEntityDetailView.title"
      focusComponent="form">
    <data>
        <instance id="candidateEntityDc"
                  class="ru.javaboys.huntyhr.entity.CandidateEntity">
            <fetchPlan extends="_base"/>
            <loader id="candidateEntityDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="candidateEntityDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="surnameField" property="surname"/>
            <datePicker id="birthDateField" property="birthDate"/>
            <select id="sexField" property="sex"/>
            <textField id="emailField" property="email"/>
            <textField id="phoneField" property="phone"/>
            <textField id="telegramField" property="telegram"/>
            <textField id="linkedinField" property="linkedin"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
