<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://questionTemplateEntityDetailView.title"
      focusComponent="form">
    <data>
        <instance id="questionTemplateEntityDc"
                  class="ru.javaboys.huntyhr.entity.QuestionTemplateEntity">
            <fetchPlan extends="_base"/>
            <loader id="questionTemplateEntityDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="questionTemplateEntityDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <select id="typeField" property="type"/>
            <textField id="idxField" property="idx"/>
            <textField id="difficultyField" property="difficulty"/>
            <textArea id="textField" height="9.5em" property="text"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
